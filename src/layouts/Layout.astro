---
interface Props {
  title: string;
}

import Toolbar from '../components/Toolbar.astro';
import StatusHeader from '../components/StatusHeader.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="House Safety Monitoring System" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen text-gray-100 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
    <Toolbar />
    <StatusHeader />
    <slot />
  </body>
</html>

<style>
  body {
    background-attachment: fixed;
  }
</style>