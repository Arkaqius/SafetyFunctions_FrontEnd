---
interface Props {
  status: 'safe' | 'warning' | 'danger';
  systemName: string;
  timestamp: string;
}

const { status, systemName, timestamp } = Astro.props;

const colors = {
  safe: 'bg-green-100 text-green-800',
  warning: 'bg-yellow-100 text-yellow-800',
  danger: 'bg-red-100 text-red-800',
};
---

<div class="bg-gray-800/50 backdrop-blur-sm p-4 rounded-lg shadow-lg border border-gray-700">
  <div class="flex justify-between items-center gap-x-4">
    <div>
      <h3 class="text-lg font-semibold text-gray-100">{systemName}</h3>
      <p class="text-sm text-gray-400">
        {new Date(timestamp).toLocaleString()}
      </p>
    </div>
    <span class={`inline-block px-6 py-2 rounded-full text-sm font-semibold shadow-md border ${colors[status]}`}>
      {status.toUpperCase()}
    </span>
  </div>
</div>
