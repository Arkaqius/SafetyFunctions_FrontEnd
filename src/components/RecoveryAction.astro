---
interface Props {
  action: {
    id: string;
    title: string;
    description: string;
    status: 'pending' | 'in-progress' | 'completed';
  };
}

const { action } = Astro.props;

const statusColors = {
  pending: 'bg-yellow-900 text-yellow-100',
  'in-progress': 'bg-blue-900 text-blue-100',
  completed: 'bg-green-900 text-green-100'
};
---

<div class="bg-gray-700 p-4 rounded-lg shadow-lg">
  <div class="flex justify-between items-start">
    <div>
      <h3 class="text-lg font-semibold text-gray-100">{action.title}</h3>
      <p class="text-gray-300">{action.description}</p>
    </div>
    <span class={`px-2 py-1 rounded-full text-sm ${statusColors[action.status]}`}>
      {action.status}
    </span>
  </div>
</div>